<% layout('/layouts/boilerplate.ejs') -%>
<div class="new-form-container">
    <h2>Create a New Listing</h2>
    <form action="/listing" method="POST" class="new-form">
        <input type="text" placeholder="Enter Title" name="listing[title]" required>
        <br>
        <input type="text" placeholder="Enter image URL/Link" name="listing[image]">
        <br>
        <textarea name="listing[description]" placeholder="Enter description"></textarea>
        <br>
        <input type="number" placeholder="Enter price" name="listing[prize]">
        <br>
        <input type="text" placeholder="Enter Location" name="listing[location]">
        <br>
        <input type="text" placeholder="Enter Country" name="listing[country]">
        <br>
        <button>Add</button>
    </form>
    </div>